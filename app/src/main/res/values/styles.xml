<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoteTagCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/note_tag_check</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <!-- viewpager for msg page-->
    <style name="MyCustomTabTextAppearanceMsg" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>
    <style name="MyCustomTabLayoutHome" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/xhsColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMaxWidth">60dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearanceMsg</item>
        <item name="tabSelectedTextColor">@color/xhsColor</item>
    </style>
</resources>