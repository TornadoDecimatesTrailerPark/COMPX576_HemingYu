<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/xhsColor"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/main_toolbar_search_merge" />

        <ImageView
            android:id="@+id/home_open_camera"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_home_camera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tablayout"
            style="@style/MyCustomTabLayoutHome"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="5"
            app:tabGravity="center"
            app:tabMode="scrollable" />

        <ImageView
            android:id="@+id/home_scrollview_showMore"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="18dp"
            android:src="@mipmap/icon_expand_down" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9e7e7" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="554dp"
        android:background="@color/backgroundcolor" />

    <LinearLayout
        android:id="@+id/navigation_footer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/xhsColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/main_page"
            android:textColor="@color/white"
           />

        <ImageView
            android:id="@+id/add_new_notes"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_home_add_notes" />

        <TextView
            android:id="@+id/main_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
