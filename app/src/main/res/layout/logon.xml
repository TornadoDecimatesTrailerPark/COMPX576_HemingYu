<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log On"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <View
            android:layout_width="70dp"
            android:layout_height="2px"
            android:background="#c7c7c7"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Log On"
            android:textSize="15sp"
            android:textColor="#b9b8b8"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <View
            android:layout_width="70dp"
            android:layout_height="2px"
            android:background="#c7c7c7"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Account"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/logon_user_name"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:hint="Please input your account" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/logon_user_pass"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="Please input your password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/logon_user_pass_aga"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="Please input your password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/logon_user_email"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:hint="Please input your Email" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_logon"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Log on"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/login_button_shape"
        style="?android:borderlessButtonStyle" />

    <TextView
        android:id="@+id/logon_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Already have account? Click to log in" />


</LinearLayout>