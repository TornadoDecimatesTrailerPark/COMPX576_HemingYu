<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.apple.xhs.custom_view.InfoSettingTitle
        android:id="@+id/changepwdtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setText="Change your password"
        app:setBackground="@drawable/setting_toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old password"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/changeoldpwd"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="input your password in here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New parrword"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/changenewpwd"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="input your password in here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_textview_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New password"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/changepwdagain"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="input your password in here" />
    </LinearLayout>

    <Button
        android:id="@+id/surechangepwd"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Confirm"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/login_button_shape"
        style="?android:borderlessButtonStyle" />
</LinearLayout>