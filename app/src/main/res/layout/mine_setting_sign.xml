<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.apple.xhs.custom_view.InfoSettingTitle
        android:id="@+id/reset_signatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setText="Introduction"
        app:setDoneText="Confirm"
        app:setBackground="@drawable/setting_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Introduce youself"
        android:textSize="13sp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:background="@color/backgroundcolor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <EditText
            android:id="@+id/sign_edit"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:padding="20dp"
            android:gravity="top"
            android:textSize="16sp"
            android:background="@null" />

        <TextView
            android:id="@+id/num_limit"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:hint="100"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor" />
</LinearLayout>